type ContractAddress = text;
type Payload = vec nat;
type Payload = vec nat8;

service : {
    // only operator (AWS Lambda) can call this method
    trigger_call : (ContractAddress, principal, Payload) -> ();

    store_message : (ContractAddress, principal, Payload) -> ();

    // only canisters can call these methods
    consume_message : (ContractAddress, Payload) -> (bool);
    send_message : (ContractAddress, Payload) -> (bool);
}